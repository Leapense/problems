#include <iostream>
using namespace std;

int main() {
    ios::sync_with_stdio(false);
    cin.tie(nullptr);

    int T;
    cin >> T;

    while (T--) {
        long long A, B, C;
        cin >> A >> B >> C;

        // 전체 타일 면적: A + 2B + 3C
        // 세로 길이가 2인 직사각형이면 전체 면적이 2의 배수여야 함.
        if ((A + 2 * B + 3 * C) % 2 != 0) {
            cout << "No\n";
            continue;
        }
        // 'ㄴ' 타일 하나당 반드시 1x1 타일 1개가 필요하므로 A >= C 여야 함.
        if (A < C) {
            cout << "No\n";
            continue;
        }
        // 남은 1x1 타일 (A - C)는 2개씩 짝지어 한 열을 채워야 하므로 (A - C)는 짝수여야 함.
        if ((A - C) % 2 != 0) {
            cout << "No\n";
            continue;
        }
        cout << "Yes\n";
    }
    
    return 0;
}

